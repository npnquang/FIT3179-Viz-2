{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Number of Storms per Year (2005-2025)",
        "fontSize": 16,
        "anchor": "start",
        "color": "#333"
    },
    "width": "container",
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/npnquang/FIT3179-Homework-10/refs/heads/main/data/ibtracs_first_locations.csv"
    },
    "params": [
        {
            "name": "globalYear",
            "value": 2010
        }
    ],
    "transform": [
        {
            "filter": "datum.YEAR >= 2005 && datum.YEAR <= 2025"
        },
        {
            "aggregate": [
                {
                    "op": "count",
                    "as": "storm_count"
                }
            ],
            "groupby": ["YEAR"]
        },
        {
            "calculate": "datum.YEAR == globalYear ? 'Selected Year' : 'Other Years'",
            "as": "yearCategory"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "line",
                "strokeWidth": 3,
                "color": "#1f77b4",
                "opacity": 0.8
            },
            "encoding": {
                "x": {
                    "field": "YEAR",
                    "type": "ordinal",
                    "title": "Year",
                    "axis": {
                        "labelAngle": -45,
                        "grid": true
                    }
                },
                "y": {
                    "field": "storm_count",
                    "type": "quantitative",
                    "title": "Number of Storms",
                    "axis": {
                        "grid": true
                    }
                }
            }
        },
        {
            "mark": {
                "type": "point",
                "size": 150,
                "filled": true
            },
            "encoding": {
                "x": {
                    "field": "YEAR",
                    "type": "ordinal"
                },
                "y": {
                    "field": "storm_count",
                    "type": "quantitative"
                },
                "color": {
                    "field": "yearCategory",
                    "type": "nominal",
                    "scale": {
                        "domain": ["Selected Year", "Other Years"],
                        "range": ["#d62728", "#1f77b4"]
                    },
                    "legend": {
                        "title": "Year Selection",
                        "orient": "top-right"
                    }
                },
                "size": {
                    "field": "yearCategory",
                    "type": "nominal",
                    "scale": {
                        "domain": ["Selected Year", "Other Years"],
                        "range": [200, 100]
                    },
                    "legend": null
                },
                "tooltip": [
                    {
                        "field": "YEAR",
                        "type": "ordinal",
                        "title": "Year"
                    },
                    {
                        "field": "storm_count",
                        "type": "quantitative",
                        "title": "Number of Storms"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "bottom",
                "dy": -10,
                "fontSize": 10,
                "fontWeight": "bold",
                "color": "#666"
            },
            "encoding": {
                "x": {
                    "field": "YEAR",
                    "type": "ordinal"
                },
                "y": {
                    "field": "storm_count",
                    "type": "quantitative"
                },
                "text": {
                    "field": "storm_count",
                    "type": "quantitative"
                },
                "opacity": {
                    "field": "yearCategory",
                    "type": "nominal",
                    "scale": {
                        "domain": ["Selected Year", "Other Years"],
                        "range": [1, 0.6]
                    },
                    "legend": null
                }
            }
        }
    ],
    "config": {
        "axis": {
            "labelFontSize": 11,
            "titleFontSize": 13
        },
        "legend": {
            "labelFontSize": 11,
            "titleFontSize": 13
        }
    }
}
